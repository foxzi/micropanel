app:
  env: production           # development / production
  host: 127.0.0.1           # Listen address (127.0.0.1 = localhost only)
  port: 8080                # HTTP port for panel
  secret: change-me-min-32-chars-random-string  # Session secret (min 32 chars)
  panel_domain: ""          # Panel domain for nginx (e.g., panel.example.com)

database:
  path: /var/lib/micropanel/micropanel.db

sites:
  path: /var/www/panel/sites

nginx:
  config_path: /etc/nginx/sites-enabled
  reload_cmd: sudo nginx -s reload

ssl:
  email: admin@example.com  # Let's Encrypt notifications
  staging: false            # true = use staging LE server (for testing)

limits:
  max_zip_size: 104857600       # 100MB
  max_file_size: 5242880        # 5MB
  max_upload_size: 10485760     # 10MB
  max_sites_per_user: 0         # 0 = unlimited

api:
  enabled: false
  tokens: []
  # tokens:
  #   - name: "deploy-bot"
  #     token: "your-secret-token-here"

security:
  panel_allowed_ips: []     # Empty = allow all
  api_allowed_ips: []       # Empty = allow all
  # Examples:
  # panel_allowed_ips:
  #   - "192.168.1.0/24"
  #   - "10.0.0.1"
