func hasSSL(domains []models.Domain) bool {
	for _, d := range domains {
		if d.SSLEnabled {
			return true
		}
	}
	return false
}

func sslStatusClass(domain models.Domain) string {
	if domain.SSLExpiresAt == nil {
		return "bg-yellow-50 border border-yellow-200 rounded p-4"
	}
	days := int(domain.SSLExpiresAt.Sub(time.Now()).Hours() / 24)
	if days <= 7 {
		return "bg-red-50 border border-red-200 rounded p-4"
	}
	if days <= 30 {
		return "bg-yellow-50 border border-yellow-200 rounded p-4"
	}
	return "bg-green-50 border border-green-200 rounded p-4"
}

func sslBadgeClass(domain models.Domain) string {
	if domain.SSLExpiresAt == nil {
		return "px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded"
	}
	days := int(domain.SSLExpiresAt.Sub(time.Now()).Hours() / 24)
	if days <= 7 {
		return "px-2 py-1 text-xs bg-red-100 text-red-800 rounded"
	}
	if days <= 30 {
		return "px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded"
	}
	return "px-2 py-1 text-xs bg-green-100 text-green-800 rounded"
}

func sslStatusText(domain models.Domain) string {
	if domain.SSLExpiresAt == nil {
		return "Unknown"
	}
	days := int(domain.SSLExpiresAt.Sub(time.Now()).Hours() / 24)
	if days <= 0 {
		return "Expired"
	}
	if days <= 7 {
		return "Expiring Soon"
	}
	if days <= 30 {
		return "Expiring"
	}
	return "Valid"
}

func daysUntilExpiry(domain models.Domain) string {
	if domain.SSLExpiresAt == nil {
		return "unknown"
	}
	days := int(domain.SSLExpiresAt.Sub(time.Now()).Hours() / 24)
	if days <= 0 {
		return "expired"
	}
	if days == 1 {
		return "1 day left"
	}
	return fmt.Sprintf("%d days left", days)
}
